{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Design system specification",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "settings": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "namespace": { "type": "string" },
        "version": { "type": "string" },
        "importantModifiers": { "type": "boolean" }
      }
    },
    "tokens": {
      "type": "object",
      "properties": {
        "borderRadius": { "$ref": "#/definitions/lengthToken" },
        "borderWidth": { "$ref": "#/definitions/lengthToken" },
        "fontSize": { "$ref": "#/definitions/lengthToken" },
        "lineHeight": { "$ref": "#/definitions/lengthToken" },
        "spacing": { "$ref": "#/definitions/lengthToken" },
        "color": { "$ref": "#/definitions/colorToken" },
        "fontFamily": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "$ref": "#/definitions/identifier" },
              "name": { "type": "string" },
              "description": { "type": "string" },
              "value": { "type": "string" }
            },
            "required": ["id", "name", "value"],
            "additionalProperties": false
          }
        },
        "fontWeight": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "$ref": "#/definitions/identifier" },
              "name": { "type": "string" },
              "description": { "type": "string" },
              "value": {
                "type": "string",
                "enum": ["100", "200", "300", "400", "500", "600", "700", "800", "900"]
              }
            },
            "required": ["id", "name", "value"],
            "additionalProperties": false
          }
        }
      }
    },
    "styles": {
      "type": "object",
      "properties": {
        "shadow": {
          "type": "array",
          "items": { "$ref": "#/definitions/shadow" }
        },
        "text": {
          "type": "array",
          "items": { "$ref": "#/definitions/textStyle" }
        }
      }
    }
  },
  "definitions": {
    "cssColorValue": {
      "type": "string",
      "pattern":
        "^(#[a-fA-F0-9]{3}|#[a-fA-F0-9]{6}|rgb\\([0-9 ]+%?,[0-9 ]+%?,[0-9 ]+%?\\)|hsl\\([0-9 ]+,[0-9 ]+%,[0-9 ]+%\\)|transparent)$"
    },
    "cssLengthValue": {
      "type": "string",
      "pattern": "^([0-9]+\\.?[0-9]*(px|%|cm|mm|in|pt|pc|em|rem|ex|ch|vh|vw|vmin|vmax))$"
    },
    "identifier": {
      "type": "string",
      "pattern": "^([a-zA-Z_\\$][a-zA-Z0-9_\\$]*)$"
    },
    "interpolation": {
      "type": "string",
      "pattern": "^\\(\\([a-zA-Z_\\$][a-zA-Z0-9_\\$]*(\\.[a-zA-Z_\\$][a-zA-Z0-9_\\$]*)*\\)\\)$"
    },
    "colorToken": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "$ref": "#/definitions/identifier" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "value": { "$ref": "#/definitions/cssColorValue" }
        },
        "required": ["id", "name", "value"],
        "additionalProperties": false
      }
    },
    "lengthToken": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "$ref": "#/definitions/identifier" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "value": { "$ref": "#/definitions/cssLengthValue" }
        },
        "required": ["id", "name", "value"],
        "additionalProperties": false
      }
    },
    "shadow": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/identifier" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "x": { "type": "number" },
        "y": { "type": "number" },
        "blur": { "type": "number" },
        "color": { "$ref": "#/definitions/interpolation" }
      },
      "required": ["id", "name", "x", "y"],
      "additionalProperties": false
    },
    "textStyle": {
      "type": "object",
      "properties": {
        "id": { "$ref": "#/definitions/identifier" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "fontFamily": { "type": "string" },
        "fontSize": { "type": "number" },
        "fontWeight": {
          "type": "string",
          "enum": ["100", "200", "300", "400", "500", "600", "700", "800", "900"]
        },
        "lineHeight": { "type": "number" },
        "letterSpacing": { "type": "number" },
        "color": { "$ref": "#/definitions/interpolation" }
      },
      "required": ["id", "name"],
      "additionalProperties": false
    }
  }
}
